<h1>Invitations</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>E-mail</th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |invitation|}}
    <tr>
      <th>{{invitation.email}}</th>
      <td>{{invitation.id}}</td>
    </tr>
        <button class="btn btn-danger btn-xs" {{action 'deleteInvitation' invitation}}>Delete</button>

  {{/each}}
  </tbody>
</table>